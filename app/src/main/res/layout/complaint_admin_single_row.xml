<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    android:elevation="200dp"
    android:padding="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="30dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <TextView
                android:id="@+id/com_date_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/heading"
                android:text="20-08-2021 11:24"
                android:textColor="@color/additionalColor"
                android:textSize="13sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/id_admin"
                android:fontFamily="@font/heading"
                android:text="Complaint Id:  "
                android:textColor="#673AB7" />

            <TextView
                android:id="@+id/id_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/heading"
                android:text="complaint Id"
                android:textColor="@color/themeColor"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/titlecompalint_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/text"
            android:padding="10dp"
            android:text="Normal posts"
            android:textColor="@color/themeColor"

            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/username_admin"
                android:layout_width="188dp"
                android:layout_height="wrap_content"


                android:layout_alignParentStart="true"

                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/status_admin"
                android:fontFamily="@font/button"
                android:text="Username"
                android:textColor="#FF5722"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="135dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/text"
                android:text="Registered Successfully"
                android:textColor="#31A736"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="3dp">

            <TextView
                android:id="@+id/tv2021"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/heading"
                android:text="Proof Verification Status:  "
                android:textColor="#9C27B0"/>


            <TextView
                android:id="@+id/proof_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/heading"
                android:text="proof"
                android:layout_toRightOf="@id/tv2021"
                android:textColor="#9C27B0" />
        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>