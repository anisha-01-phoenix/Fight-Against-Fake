<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="15dp"
    android:id="@+id/cvg"
    app:cardElevation="30dp"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:elevation="200dp">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <TextView
                android:id="@+id/titlecompalint_admin_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"

                android:layout_marginBottom="5dp"
                android:fontFamily="@font/text"
                android:padding="10dp"
                android:textColor="@color/additionalColor"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/com_date_admin_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titlecompalint_admin_info"
                android:layout_alignParentEnd="true"
                android:layout_margin="4dp"
                android:fontFamily="@font/heading"
                android:padding="3dp"
                android:text="20-08-2021 11:24"
                android:textColor="@color/themeColor"
                android:textSize="13sp" />



        </RelativeLayout>



</androidx.cardview.widget.CardView>