<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="30dp"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:elevation="200dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">


                <TextView
                    android:id="@+id/com_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/heading"
                    android:text="20-08-2021 11:24"
                    android:textColor="@color/themeColor"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp"
                    android:text="complaint Id"
                    android:textColor="@color/additionalColor"
                    android:fontFamily="@font/heading"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/titlecompalint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Normal posts"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:textSize="18sp"
                android:fontFamily="@font/text"

                android:textColor="@color/additionalColor"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="Registered Successfully"
                    android:textColor="#31A736"
                    android:textStyle="bold" />


            </RelativeLayout>




        </LinearLayout>



</androidx.cardview.widget.CardView>