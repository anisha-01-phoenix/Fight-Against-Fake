<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg1"
    android:orientation="vertical"
    tools:context=".admin_package.status_change">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="Set Status"
    android:textColor="@color/white"
    android:gravity="center"
    android:fontFamily="@font/heading"
    android:layout_marginBottom="23dp"
    android:layout_marginTop="17dp"
    android:textSize="28dp"/>
    <!-- TODO: Update blank fragment layout -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <CheckBox
        android:id="@+id/seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="15dp"
        android:text="Accepted"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/text"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="548dp" />

    <CheckBox
        android:id="@+id/in_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="169dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="58dp"
        android:text="In Progress"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/text"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="548dp" />

    <CheckBox
        android:id="@+id/Completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="79dp"
        android:text="Completed"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/text"/>

    <CheckBox
        android:id="@+id/rejected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="169dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="75dp"
        android:text="Rejected"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/text"/>


</RelativeLayout>
    <Button
        android:id="@+id/status_change"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="39dp"
        android:background="@drawable/tab_indicator"
        android:fontFamily="@font/button"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="19dp"
        android:text="  Save Status  " />
</LinearLayout>