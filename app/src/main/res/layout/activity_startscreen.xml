<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.Startscreen"
    android:background="@drawable/startscreen">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SignIn As . . ."
        android:textSize="32dp"
        android:textColor="@color/white"
        android:fontFamily="@font/heading"
        android:gravity="center"
        android:textAllCaps="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/asUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="@font/button"
        android:text="USER"
        android:background="@drawable/button"
        android:textColor="@color/themeColor"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.56" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/asAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/button"
        android:fontFamily="@font/button"
        android:text="ADMIN"
        android:textColor="@color/themeColor"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.7" />




</androidx.constraintlayout.widget.ConstraintLayout>